<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="recipe"
            type="de.codepub.bakeandroid.items.Recipe" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="@dimen/recipe_label_margin"
        tools:context="de.codepub.bakeandroid.ui.recipedetail.RecipeDetailActivity">

        <TextView
            android:id="@+id/tvRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/recipe_label_margin"
            android:gravity="center"
            android:text="@{recipe.name}"
            android:textSize="@dimen/recipe_title_size"
            tools:text="Weihnachtskekse" />

        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{recipe.ingredientsAsString}"
            android:textSize="@dimen/ingredients_text_size"
            tools:text="Zuker\nMehl\nButter\nEier" />

    </LinearLayout>
</layout>
